{
    "type": "module",
    "scripts": {
        "format": "prettier --write --plugin prettier-plugin-svelte site/src/* site/src/components/*",
        "build": "vite build",
        "dev": "vite",
        "eslint": "eslint -c package.json site/src/ --fix"
    },
    "devDependencies": {
        "@sveltejs/vite-plugin-svelte": "^3.1.2",
        "eslint": "^8.51.0",
        "eslint-plugin-import": "^2.28.1",
        "eslint-plugin-svelte": "^2.34.0",
        "prettier": "^3.0.3",
        "prettier-plugin-svelte": "^3.0.3",
        "vite": "^5.4.7"
    },
    "dependencies": {
        "d3-array": "^3.2.4",
        "d3-fetch": "^3.0.1",
        "d3-scale": "^4.0.2",
        "d3-selection": "^3.0.0",
        "d3-shape": "^3.2.0",
        "d3-transition": "^3.0.1",
        "svelecte": "^3.17.2",
        "svelte": "^4.2.19"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/jieter/orc-data.git"
    },
    "eslintConfig": {
        "extends": "plugin:svelte/prettier",
        "parserOptions": {
            "ecmaVersion": 2020,
            "sourceType": "module"
        },
        "env": {
            "es6": true,
            "browser": true
        },
        "plugins": [
            "import"
        ],
        "rules": {
            "semi": [
                "error",
                "always"
            ],
            "import/order": [
                "error",
                {
                    "groups": [
                        "builtin",
                        "external",
                        "internal",
                        [
                            "parent",
                            "sibling"
                        ]
                    ],
                    "newlines-between": "always",
                    "alphabetize": {
                        "order": "asc",
                        "caseInsensitive": true
                    }
                }
            ]
        }
    },
    "browserslist": [
        "> 0.3% in US",
        "last 2 versions",
        "Firefox ESR",
        "not ie <= 11",
        "not dead"
    ]
}
