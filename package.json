{
    "scripts": {
        "test": "npm run eslint",
        "build": "rollup -c",
        "start": "sirv site --no-clear",
        "dev": "rollup -c -w",
        "eslint": "eslint -c package.json site/src/",
        "format": "prettier --write --plugin prettier-plugin-svelte rollup.config.mjs site/src/* site/src/components/*.svelte"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^25.0.5",
        "@rollup/plugin-node-resolve": "^15.2.3",
        "@rollup/plugin-terser": "^0.4.4",
        "eslint": "^8.51.0",
        "eslint-plugin-svelte": "^2.34.0",
        "prettier": "^3.0.3",
        "prettier-plugin-svelte": "^3.0.3",
        "rollup": "^3.29.4",
        "rollup-plugin-analyzer": "^4.0.0",
        "rollup-plugin-css-only": "^4.3.0",
        "rollup-plugin-livereload": "^2.0.5",
        "rollup-plugin-svelte": "^7.1.6",
        "sirv-cli": "^2.0.2"
    },
    "dependencies": {
        "d3-array": "^3.2.4",
        "d3-fetch": "^3.0.1",
        "d3-scale": "^4.0.2",
        "d3-selection": "^3.0.0",
        "d3-shape": "^3.2.0",
        "d3-transition": "^3.0.1",
        "svelecte": "^3.17.2",
        "svelte": "^4.2.1"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/jieter/orc-data.git"
    },
    "eslintConfig": {
        "extends": "plugin:svelte/prettier",
        "parserOptions": {
            "ecmaVersion": 2020,
            "sourceType": "module"
        },

        "env": {
            "es6": true,
            "browser": true
        },
        "rules": {
            "semi": [
                "error",
                "always"
            ],
            "import/order": [
                "error",
                {
                    "groups": [
                        "builtin",
                        "external",
                        "internal",
                        [
                            "parent",
                            "sibling"
                        ]
                    ],
                    "newlines-between": "always",
                    "alphabetize": {
                        "order": "asc",
                        "caseInsensitive": true
                    }
                }
            ]
        }
    },
    "browserslist": [
        "> 0.3% in US",
        "last 2 versions",
        "Firefox ESR",
        "not ie <= 11",
        "not dead"
    ]
}
