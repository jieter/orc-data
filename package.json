{
    "scripts": {
        "test": "npm run lint",
        "build": "rollup -c",
        "start": "sirv site --no-clear",
        "dev": "rollup -c -w",
        "eslint": "eslint -c package.json site/src/ site/index.js",
        "format": "prettier --write --plugin-search-dir=. site/*.js site/**/*.svelte site/**/*.js"

    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^20.0.0",
        "@rollup/plugin-node-resolve": "^13.0.4",
        "eslint": "^7.32.0",
        "eslint-plugin-html": "^6.1.2",
        "prettier": "^2.3.2",
        "prettier-plugin-svelte": "^2.3.1",
        "rollup-plugin-analyzer": "^4.0.0",
        "terser-webpack-plugin": "^5.1.4"
    },
    "dependencies": {
        "d3-array": "^3.0.1",
        "d3-fetch": "^3.0.1",
        "d3-scale": "^4.0.0",
        "d3-selection": "^3.0.0",
        "d3-shape": "^3.0.1",
        "d3-transition": "^3.0.1",
        "rollup": "^2.56.2",
        "rollup-plugin-css-only": "^3.1.0",
        "rollup-plugin-livereload": "^2.0.5",
        "rollup-plugin-svelte": "^7.1.0",
        "rollup-plugin-terser": "^7.0.2",
        "sirv-cli": "^1.0.12",
        "svelecte": "^1.3.5",
        "svelte": "^3.42.1"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/jieter/orc-data.git"
    },
    "eslintConfig": {
        "extends": "eslint:recommended",
        "parserOptions": {
            "ecmaVersion": 2019,
            "sourceType": "module"
        },
        "env": {
            "es6": true,
            "browser": true
        }
    },
    "browserslist": [
        "> 0.3% in US",
        "last 2 versions",
        "Firefox ESR",
        "not ie <= 11",
        "not dead"
    ]
}